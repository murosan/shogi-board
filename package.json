{
  "name": "shogi-board",
  "version": "3.2.0",
  "private": true,
  "author": "murosan",
  "description": "shogi board on browser",
  "license": "MIT",
  "keywords": [
    "shogi",
    "board",
    "japanese chess",
    "将棋",
    "検討",
    "ブラウザ",
    "将棋ソフト"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/murosan/shogi-board"
  },
  "bugs": "https://github.com/murosan/shogi-board/issues",
  "homepage": "https://murosan.github.io/shogi-board",
  "engines": {
    "node": ">=13.7.0"
  },
  "dependencies": {
    "@types/clipboard": "^2.0.1",
    "@types/enzyme": "3.10.4",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^24.0.13",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node": "13.1.2",
    "@types/react": "16.9.17",
    "@types/react-dom": "16.9.4",
    "@types/shortid": "^0.0.29",
    "axios": "^0.21.1",
    "clipboard": "^2.0.6",
    "interval-promise": "^1.4.0",
    "lodash.debounce": "^4.0.8",
    "mobx": "^5.10.1",
    "mobx-react-lite": "2.0.7",
    "node-sass": "^4.14.1",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-scripts": "3.4.1",
    "shortid": "2.2.15",
    "typescript": "3.9.6"
  },
  "devDependencies": {
    "codecov": "^3.7.1",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.2",
    "gh-pages": "^3.1.0",
    "husky": "^4.2.5",
    "jest": "24.9.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "react-test-renderer": "16.12.0",
    "source-map-explorer": "^2.4.2",
    "ts-jest": "24.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:doc": "cd document/website; yarn start",
    "build": "react-scripts build",
    "deploy": "bin/deploy.sh",
    "test": "react-scripts test",
    "test:c": "react-scripts test --coverage --watchAll=false",
    "test:debug": "react-scripts --inspect-brk test --runInBand",
    "test:ci": "CI=true node --max_old_space_size=1024 --trace-gc ./node_modules/react-scripts/bin/react-scripts.js test --maxWorkers=2 --coverage --reporters=default",
    "lint": "prettier --write '**/*.{js,jsx,ts,tsx,json,yml,css,scss,md,html}'",
    "analyze": "source-map-explorer build/static/js/main.*"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,yml,css,scss,md,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/src/index.tsx",
      "!<rootDir>/src/config/*.js",
      "!<rootDir>/src/serviceWorker.ts"
    ]
  }
}
